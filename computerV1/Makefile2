SOURCE = main

SOURCEDIR = $(addprefix src/,$(SOURCE:%=%.c))

OBJETDIR = $(SOURCE:%=%.o)

LIB = libft/libft.a

WWW = -Wall -Werror -Wextra

EXEC = computer

MF = make fclean


.PHONY: all clean fclean re

all: $(EXEC)

$(EXEC): $(OBJETDIR)
	make -C libft/
	gcc $(WWW) -o $(EXEC) -I $(LIB) $(SOURCEDIR) 
clean:
	make clean -C libft/
	@/bin/rm -rf $(OBJETDIR)

fclean: clean
	/bin/rm -rf $(EXEC)

re: fclean all

